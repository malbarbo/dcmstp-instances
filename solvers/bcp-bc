#!/usr/bin/python3 -B

import os
import subprocess
import sys

BCP_BC = os.path.join(os.path.dirname(sys.argv[0]), '../target/solvers/bcp_bc')


def main():
    result = subprocess.run(
        [BCP_BC, '0', sys.argv[1], '/dev/null'], stdout=subprocess.PIPE)
    lines = result.stdout.decode().split('\n')
    print(float(get_value('Total time: ', lines)))
    print(float(get_value('UB: ', lines)))
    print("")  # no solution


def get_value(key, lines):
    for line in reversed(lines):
        if line.startswith(key):
            return line[len(key):].strip()


if __name__ == "__main__":
    main()
